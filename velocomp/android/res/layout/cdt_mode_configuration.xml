<?xml version="1.0" encoding="utf-8"?>

<org.vol.velocomp.views.CDTModeConfiguration
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="CDT Mode Configuration"
                android:textSize="15dp"
                android:textColor="#000000"/>

        <include android:id="@+id/transition_gap" layout="@layout/seekbar_section"/>

        <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:baselineAligned="false"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp">
            <TextView
                    android:id="@+id/alphaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Alpha Factor"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true" />
            <EditText android:id="@+id/alphaFactor"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:inputType="numberDecimal"
                      android:text="0.0"
                      android:layout_below="@id/alphaLabel"
                      android:layout_margin="5dp"/>

        </RelativeLayout>

        <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:baselineAligned="false"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp">
            <TextView
                    android:id="@+id/betaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Beta Factor"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true" />
            <EditText android:id="@+id/betaFactor"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:inputType="numberDecimal"
                      android:text="0.0"
                      android:layout_below="@id/betaLabel"
                      android:layout_margin="5dp"/>

        </RelativeLayout>




    </LinearLayout>

</org.vol.velocomp.views.CDTModeConfiguration>